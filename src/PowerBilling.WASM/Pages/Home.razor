@page "/"

<PageTitle>Home</PageTitle>


<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Power Usage Analytics</title>



    <style>
        input[type="date"]::-webkit-calendar-picker-indicator {
            filter: invert(1);
        }

        .glow-button {
            position: relative;
            overflow: hidden;
        }

        .glow-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 200%;
            height: 100%;
            background: linear-gradient(90deg,
                    transparent,
                    rgba(255, 255, 255, 0.2),
                    transparent);
            transition: 0.5s;
        }

        .glow-button:hover::before {
            left: 100%;
        }
    </style>
</head>

<body class="min-h-screen bg-[#0A0A0A] text-white">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <!-- Header with gradient text -->
        <div class="mb-8 text-center">
            <h1
                class="text-4xl font-bold mb-2 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 text-transparent bg-clip-text">
                Power Usage Analytics
            </h1>
            <p class="text-gray-400">Detailed billing breakdown by type and tier</p>
        </div>

        <div class="bg-[#1A1A1A] rounded-2xl border border-gray-800 overflow-hidden backdrop-blur-xl">
            <!-- Input Form -->
            <div class="px-6 py-4 border-b border-gray-800 bg-[#111111]">
                <form id="billingForm" class="grid grid-cols-1 md:grid-cols-5 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-1">
                            <i data-lucide="building" class="inline-block w-4 h-4 mr-1"></i>
                            Billing Type
                        </label>
                        <select name="billingType"
                            class="w-full bg-[#232323] border border-gray-700 rounded-lg px-3 py-2 text-sm text-gray-200 focus:outline-none focus:border-blue-500">
                            <option value="Residential">Residential</option>
                            <option value="Commercial">Commercial</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-1">
                            <i data-lucide="calendar-range" class="inline-block w-4 h-4 mr-1"></i>
                            Start Date
                        </label>
                        <input type="date" name="startDate"
                            class="w-full bg-[#232323] border border-gray-700 rounded-lg px-3 py-2 text-sm text-gray-200 focus:outline-none focus:border-blue-500"
                            required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-1">
                            <i data-lucide="calendar-check" class="inline-block w-4 h-4 mr-1"></i>
                            End Date
                        </label>
                        <input type="date" name="endDate"
                            class="w-full bg-[#232323] border border-gray-700 rounded-lg px-3 py-2 text-sm text-gray-200 focus:outline-none focus:border-blue-500"
                            required />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-400 mb-1">
                            <i data-lucide="gauge" class="inline-block w-4 h-4 mr-1"></i>
                            Consumption (kWh)
                        </label>
                        <input type="number" name="consumption" placeholder="Enter kWh"
                            class="w-full bg-[#232323] border border-gray-700 rounded-lg px-3 py-2 text-sm text-gray-200 focus:outline-none focus:border-blue-500"
                            required />
                    </div>
                    <div class="flex items-end">
                        <button type="submit"
                            class="w-full glow-button bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 text-white rounded-lg px-4 py-2.5 text-sm font-medium flex items-center justify-center space-x-2 transition-all duration-200 shadow-lg shadow-blue-500/20 hover:shadow-purple-500/20">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                            <span>Add Entry</span>
                        </button>
                    </div>
                </form>
            </div>

            <!-- Table Header -->
            <div class="px-6 py-4 border-b border-gray-800 bg-[#111111]">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-blue-500/10 rounded-lg">
                            <i data-lucide="table" class="w-5 h-5 text-blue-400"></i>
                        </div>
                        <h2 class="text-lg font-medium text-gray-200">Billing Details</h2>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div
                            class="flex items-center space-x-2 text-gray-400 bg-[#232323] px-3 py-1.5 rounded-full text-sm">
                            <i data-lucide="calendar" class="w-4 h-4"></i>
                            <span>March 2024</span>
                        </div>
                        <div
                            class="flex items-center space-x-2 text-gray-400 bg-[#232323] px-3 py-1.5 rounded-full text-sm">
                            <i data-lucide="bar-chart" class="w-4 h-4"></i>
                            <span>Real-time Data</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-800">
                    <thead>
                        <tr class="bg-[#111111]">
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <i data-lucide="building" class="w-4 h-4"></i>
                                    <span>Billing Type</span>
                                </div>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <i data-lucide="calendar-range" class="w-4 h-4"></i>
                                    <span>Date Range</span>
                                </div>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <i data-lucide="layers" class="w-4 h-4"></i>
                                    <span>Tier</span>
                                </div>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <div class="p-1 bg-yellow-500/10 rounded">
                                        <i data-lucide="zap" class="w-4 h-4 text-yellow-400"></i>
                                    </div>
                                    <span>Consumption (kWh)</span>
                                </div>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <i data-lucide="percent" class="w-4 h-4"></i>
                                    <span>Rate ($/kWh)</span>
                                </div>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">
                                <div class="flex items-center space-x-2">
                                    <div class="p-1 bg-green-500/10 rounded">
                                        <i data-lucide="dollar-sign" class="w-4 h-4 text-green-400"></i>
                                    </div>
                                    <span>Amount</span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="billingTableBody" class="divide-y divide-gray-800">
                        <!-- Example row will be here -->
                    </tbody>
                    <tfoot class="bg-[#111111]">
                        <tr>
                            <td colspan="3" class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                                <div class="flex items-center space-x-2">
                                    <i data-lucide="calculator" class="w-4 h-4"></i>
                                    <span>Total</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <span id="totalConsumption" class="text-yellow-400">0 kWh</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-300">
                                Avg: <span id="averageRate">$0.00</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <span id="totalAmount" class="text-green-400">$0.00</span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>


</body>

</html>
